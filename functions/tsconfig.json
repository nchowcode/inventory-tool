{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "baseUrl": "./",
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*", "functions/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
